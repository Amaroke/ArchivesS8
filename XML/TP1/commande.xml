    <receveur>
        <organisation>
            <nom>Zeocto</nom>

            <adresse>41 rue des pieuvres</adresse>

            <telephone>11 11 11 11 11</telephone>

            <fax>22 22 22 22 22</fax>
        </organisation>
    </receveur>

    <date>10 Novembre 2004</date>

    <montant>100 euros</montant>

    <commande ref_produit="AX110">
        <intitule>Ecrous de taille 36</intitule>

        <quantite>4102</quantite>

