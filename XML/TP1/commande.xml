<?xml version= "1.0" ?>
<!DOCTYPE bon_commande [
        <!ELEMENT bon_commande (emetteur|receveur|date|montant|commande)*>
        <!ELEMENT emetteur (organisation)*>
        <!ELEMENT organisation (nom|adresse|telephone|fax)*>
        <!ELEMENT nom (#PCDATA)>
        <!ELEMENT adresse (#PCDATA)>
        <!ELEMENT telephone (#PCDATA)>
        <!ELEMENT receveur (organisation)*>
        <!ELEMENT fax (#PCDATA)>
        <!ELEMENT date (#PCDATA)>
        <!ELEMENT montant (#PCDATA)>
        <!ELEMENT commande (intitule|quantite|prix_unitaire)*>
        <!ATTLIST commande
                ref_produit CDATA #REQUIRED>
        <!ELEMENT intitule (#PCDATA)>
        <!ELEMENT quantite (#PCDATA)>
        <!ELEMENT prix_unitaire (#PCDATA)>
        ]>
<bon_commande>
